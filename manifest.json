{
    "manifest_version": 3,
    "name": "Spooky Mode",
    "version": "1.1",
    "description": "A Spooky Halloween Prank!",
    "permissions": ["storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
    },
    "content_scripts": [
      {
       "matches": [
        "https://www.youtube.com/*",
        "https://www.google.com/*",
        "https://reactiontimegame.pages.dev/*"
      ],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
        {
          "resources": ["spooky-img.jpg", "audio.mp3", "styles.css"],
          "matches": [
            "https://www.youtube.com/*",
            "https://www.google.com/*",
            "https://reactiontimegame.pages.dev/*"
          ]
        }
      ]
  }
  